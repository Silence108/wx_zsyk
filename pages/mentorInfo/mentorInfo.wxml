<!--私教详情-->
<view class='container'>
  <view class='headbg'>
    <view class='headimg'>
      <image src='{{userInfo.userinfo.avatarUrl}}'></image>
    </view>
    <view class='username'>
      <text>{{userInfo.userinfo.nickName}}</text>
      <i wx:if='{{userInfo.userinfo.gender == "1"}}' class='iconfont icon-male'></i>
      <i wx:if='{{userInfo.userinfo.gender == "2"}}' class='iconfont icon-female'></i>
      <text class='age'>{{userInfo.userinfo.age}}</text>
    </view>
    <view class='line_1'>
      <view class='timeprc'>{{userInfo.price}}元/时</view>
      <view class='time'>授课时长 {{userInfo.toltalhours}}小时</view>
      <view class='like'><i class='iconfont icon-likefill'> {{userInfo.likenum}}</i></view>
    </view>
    <view class='line_2'>{{userInfo.intro}}</view>
  </view>
  <view class='index-title'>个人简介</view>
</view>