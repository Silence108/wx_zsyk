/* 个人资料 */
page {
  background: #f5f5f5;
}
.head {
  padding: 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  background: #fff
}
.head .headimg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.item {
  display: flex;
  justify-content: space-between;
  line-height: 88rpx;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: #dfdfdf solid 1rpx;
  font-size: 32rpx;
  background: #fff;
}
.item .iconfont {
  color: #999
}
.item.noborder {
  border-bottom: none;
}
.item .name {
  width: 20%;
  text-align: justify;
  text-align-last:justify;
}
.item .value {
  width: 75%;
  text-align: right;
}
.btn {
  width: 90%;
  text-align: center;
  background: #999;
  color: #fff;
  margin: 80rpx auto;
  line-height: 88rpx;
  border-radius: 10rpx;
  margin-bottom: 100rpx;
}
.btn.active {
  background: #039FEC;
}