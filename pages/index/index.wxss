/**index.wxss**/

/* 搜索 */
@import "../../wxSearchView/wxSearchView.wxss";
/* banner */
.banner {
  width: 100%;
  height: 340rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 栏目名称 */

.index-title {
  border-left: #aaa solid 8rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  margin: 24rpx;
  padding-left: 10rpx;
  display: flex;
  justify-content: space-between;
}

.index-title .more {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

/* 名师推荐 */

.itembox_1 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  padding: 0 24rpx 24rpx;
}

.itembox_1 .item {
  width: 30%;
}

.itembox_1 .item .headimg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
}

.itembox_1 .item .username {
  font-size: 32rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.itembox_1 .item .int {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 视频推荐 */

.itembox_2 {
  display: flex;
  /* justify-content: space-around; */
  padding: 0 24rpx 24rpx;
  flex-wrap: wrap;
}

.itembox_2 .item {
  width: 48%;
  margin-right: 24rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.itembox_2 .item:nth-child(2n) {
  margin-right: 0;
}

.itembox_2 .item .videoimg {
  position: relative;
  height: 210rpx;
}

.itembox_2 .item .videoimg .coverimg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.itembox_2 .item .videoimg .prc {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  padding: 0 12rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ff9f33;
  z-index: 2;
}

.itembox_2 .item .videoimg .num {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  padding: 0 12rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  z-index: 2;
}

.itembox_2 .item .videoimg .num .iconfont {
  font-size: 24rpx;
}

.itembox_2 .item .txt {
  font-size: 30rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 课程推荐 */

.itembox_3 .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx 24rpx;
  margin-bottom: 20rpx;
}

.itembox_3 .item .left {
  width: 240rpx;
  height: 160rpx;
  position: relative;
}

.itembox_3 .item .left .type {
  position: absolute;
  background: #009688;
  color: #fff;
  font-size: 24rpx;
  padding: 0 12rpx;
  top: 0;
  left: 0;
}

.itembox_3 .item .right {
  width: 440rpx;
  font-size: 24rpx;
}

.itembox_3 .item .right .title {
  font-size: 28rpx;
}

.itembox_3 .item .right .line {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.itembox_3 .item .right .line_1 {
  color: #666;
}

.itembox_3 .item .right .line_1 .iconfont {
  font-size: 26rpx;
}

.itembox_3 .item .right .line_1 .prc {
  color: #e51c23;
  font-size: 26rpx;
}

.itembox_3 .item .right .line_2 {
  color: #999;
}

.itembox_3 .item .right .line_2 .name {
  color: #62821f;
}
/* 意见反馈 */
movable-area {
  height: 100vh;
  width: 100rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0rpx;
  right: 0rpx;
  z-index: 888
}
.feedback {
  position: absolute;
  bottom: 20rpx;
  right: 24rpx;
  background: #039FEC;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  z-index: 999;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  opacity: .8
}
.feedback .iconfont {
  font-size: 50rpx;
}

.round-click{
  height: 100rpx;
  width: 100rpx;
  background-color: #039FEC;
  border-radius: 100%;
  position: fixed;
  bottom: 80rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
  opacity: 0.8;
}

.round-click navigator{
  font-size: 28rpx;
  max-width: 60rpx;
  color: #fff;
  text-align: center;
}
