/* 意见反馈 */
.container {
  background: #f5f5f5;
  height: 100vh;
}
.line1 {
  display: flex;
  justify-content: space-between;
  line-height: 88rpx;
  align-items: center;
  padding: 0 24rpx;
  font-size: 32rpx;
  background: #fff;
}
.line1 .name {
  width: 20%;
  text-align: justify;
  text-align-last:justify;
}
.line1 .value {
  width: 75%;
  text-align: right;
}
.line2 {
  background: #fff;
  padding: 24rpx;
  height: 300rpx;
}
.line2 textarea {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}
.line3 {
  background: #fff;
  padding: 0 24rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
}
.line3 input {
  width: 100%;
  line-height: 88rpx;
  height: 88rpx;
}
.line4 {
  background: #fff;
}
.line4 .title {
  padding: 0 24rpx;
  font-size: 32rpx;
  line-height: 88rpx;
}
.re-img {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
}
.re-img .i-item {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.btn {
  width: 90%;
  text-align: center;
  background: #039FEC;
  color: #fff;
  margin: 80rpx auto;
  line-height: 88rpx;
  border-radius: 10rpx;
  margin-bottom: 100rpx;
}