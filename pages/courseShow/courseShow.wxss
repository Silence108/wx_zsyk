@import "/wxParse/wxParse.wxss";
/* 线下课程详情 */
.topimg {
  width: 100%;
  height: 360rpx;
  position: relative;
}
.topimg .starttime {
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,.5);
  color: #fff;
  font-size: 36rpx;
  line-height: 88rpx;
  text-align: center;
  width: 100%;
}
.title {
  padding: 10rpx 24rpx;
  font-size: 34rpx;
}
.line_1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.line_1 .prc {
  color: #fe3044;
}
.line_2 {
  padding: 0 24rpx;
  color: #333;
  font-size: 30rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.line_2 .iconfont {
  font-size: 30rpx;
  line-height: 88rpx;
  color: #039FEC
}
.line_2 text {
  width: 620rpx;
}
.line_2 .iconfont.icon-right {
  color: #999;
}
.line-bg {
  /* margin-top: 24rpx; */
}
.box1 {
  padding: 0 24rpx;
  font-size: 28rpx;
}
.box1 .line1 {
  line-height: 88rpx;
  font-size: 32rpx;
  border-bottom: #dfdfdf solid 1rpx;
}
.box1 .line2 .line3 {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.box1 .line2 .line3 .headimg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: #dfdfdf solid 2px;
  margin-right: 10rpx;
}
.box1 .line2 .line4 {
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-bottom: 24rpx;
}
.content {
  padding: 0 24rpx 24rpx;
  font-size: 30rpx;
  margin-bottom: 88rpx;
}
.content .line1 {
  display: flex;
  justify-content: space-around;
  line-height: 88rpx;
  font-size: 30rpx;
}
.content .line1 .tab {
  width: 26%;
  text-align: center;
}
.content .line1 .tab.active {
  border-bottom: #039FEC solid 3rpx;
}
.content swiper {
  height: calc(100vh - 190rpx);
  overflow-y: auto;
}
.content swiper-item {
  padding-top: 24rpx;
  overflow-y:auto;
}
.botmenu {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  background: #039FEC;
  color: #fff;
  line-height: 88rpx;
  border-top:#dfdfdf solid 1px; 
  font-size: 32rpx;
}
.botmenu .item {
  width: 50%;
  text-align: center;
  border-radius: 0;
  border: none;
}
.botmenu .item.active {
  background: #f1f1f1 !important;
  color: #333
}
.botmenu  button {
  display: block;
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box;
  text-align: center;
  border-radius: 0;
  border: none;
  font-size: 32rpx;
  line-height: 44px;
  background: none;
  box-shadow: none;
  width: 100%;
  height: 88rpx;
  color: #fff
 }
 .botmenu  button:first-child {
   border-right: #dfdfdf solid 1px;
 }
.cover {
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,.4);
  overflow: hidden;
}
.inputbox {
  position: fixed;
  z-index: 5;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.inputbox input {
  width: 80%;
  margin-left: 24rpx;
  height: 68rpx;
  line-height: 68rpx;
  border: #dfdfdf solid 1rpx;
  border-radius: 68rpx;
  font-size: 32rpx;
  padding-left: 24rpx;
}
.inputbox text {
  margin-right: 24rpx;
  color: #333;
  font-size: 32rpx;
}
textarea {
  width: 100%;
  height: 100%;
  position: inherit;
}
button::after {
  border-radius: 0;
  border: none;
}
button{
  border-radius: 0;
}