/* 个人中心 */
page {
  background: #f5f5f5;
}
.headbg {
  background: #039FEC;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  padding: 44rpx 0;
}
.headbg .headimg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  border: #fff solid 8rpx;
}
.headbg .username {
  font-size: 34rpx;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}
.headbg .qm {
  color: #aee4ff;
  font-size: 26rpx;
}
.headbg .qm .iconfont {
  margin-left: 10rpx;
}
.box1 {
  display: flex;
  justify-content: space-around;
  background: #fff;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.box1 .item {
  margin: 24rpx 0;
  text-align: center;
  width: 30%;
  border-right: #dfdfdf solid 1rpx;
}
.box1 .item:last-child {
  border: none;
}
.box1 .item .num {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.box1 .item .txt .iconfont {
  font-size: 28rpx;
  color: #999;
}
.box2 .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 0 24rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-bottom: 1rpx;
}
.box2 .item.mg {
  margin-top: 10rpx;
}
.box2 .item .icon {
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  color: #039FEC;
  margin-right: 10rpx;
}
.box2 .item .icon .iconfont {
  font-size: 40rpx;
}
.box2 .item .txt {
  width: 300rpx
}
.box2 .item .status {
  width: 320rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: right;
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #666;
}
.box2 .item .status.active {
  color: #d70000;
}
.box2 .item .jt {
  width: 15rpx;
  height: 27rpx;
  line-height: 27rpx;
}
.mark {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999
}
.mark .inputbox {
  width: 78%;
  height: 340rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 40%;
}
.mark .inputbox .title {
  background: #f5f5f5;
  text-align: center;
  color: #666;
  font-size: 32rpx;
  line-height: 88rpx;
  width: 100%;
  position: relative;
}
.mark .inputbox .title text {
  position: absolute;
  right: 24rpx;
  font-size: 30rpx;
  color: #039FEC
}
.mark .inputbox .title text.cancel {
  right: auto;
  left: 24rpx;
  color: #999;
}
.mark .inputbox .bg {
  padding: 24rpx;
  font-size: 28rpx;
  height: 172rpx;
}
.mark .inputbox .bg textarea {
  width: 100%;
  height: 100%;
  position: inherit;
}
.mark .inputbox .bg text {
  display: block;
  text-align: right;
  color: #999;
  line-height: 32rpx;
  font-size: 24rpx;
}
.line-bg {
  height: 88rpx;
}
