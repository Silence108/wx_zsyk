/**app.wxss**/
@import './utils/css/iconfont.wxss';
.container {
  color: #333; 
} 
image {
  width: 100%;
  height: 100%;
}
.line-bg {
  background: #f5f5f5;
  height: 10rpx;
  width: 100%;
}
/* 没有数据页面展示 */
.nodata {
  font-size: 30rpx;
  color: #666;
  display: none;
}
.nodata.active {
  display: block;
}
.nodata image {
  display: block;
  width: 474rpx;
  height: 542rpx;
  margin: 80rpx auto
}
/* 评论列表样式 */
.comment .item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}
.comment .item .headimg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.comment .item .rightinfo {
  width: 580rpx;
}
.comment .item .rightinfo .line1 {
  justify-content: space-between;
  line-height: 45rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: #666
}
.comment .item .rightinfo .child .info .name {
  margin-top: 30rpx;
  border-left: #039FEC solid 8rpx;
  padding-left: 10rpx;
  margin-bottom: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
}